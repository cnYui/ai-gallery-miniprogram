/* create.wxss */
.container {
  padding: 30rpx;
  min-height: 100vh;
  background-color: var(--bg-color);
  transition: background-color 0.3s ease;
}

.input-area {
  padding: 30rpx;
  margin-bottom: 40rpx;
  background-color: var(--card-bg);
  border-radius: 24rpx;
  box-shadow: var(--shadow);
  transition: background-color 0.3s ease, box-shadow 0.3s ease;
}

.input-label {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: var(--text-primary);
  transition: color 0.3s ease;
}

.input-description {
  font-size: 28rpx;
  color: var(--text-secondary);
  margin-bottom: 30rpx;
  transition: color 0.3s ease;
}

.prompt-input {
  margin-bottom: 30rpx;
}

.inspiration-btn {
  margin-bottom: 40rpx;
}

.tags-container {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.tag {
  margin-right: 0 !important;
}

.negative-input {
  margin-bottom: 10rpx;
}

.generate-btn {
  margin-top: 40rpx;
}